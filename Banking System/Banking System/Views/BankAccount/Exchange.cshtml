@model BankingSystem.Models.ExchangeViewModel
@{
    ViewData["Title"] = "Exchange";
}

<h2>Exchange money into another currency:</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.FromCurrency, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.FromCurrency, Model.Currencies, "-", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FromCurrency, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ToCurrency, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.ToCurrency, Model.Currencies, "-", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ToCurrency, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Confirm" class="btn btn-default" />
        </div>

    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

